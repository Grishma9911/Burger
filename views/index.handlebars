<div class="row sect">
    <div class="col-md-2"></div>
    <div class="col-md-8 text-center ip">
        <form class="create-form">
            <div class="form-group">
                <h4 class="card-title ttl-color"><label for="burgerName">Enter Burger Name: </label></h4>
                <input type="text" id="name" name="burgerName">
            </div>
            <button type="submit" class="btn add">Add a Burger</button>
        </form>
    </div>
    {{!-- <div class="col-md-2"></div> --}}
</div>
<div class="image">
    <img src="https://media3.giphy.com/media/7NXp5l8D4oRsm0XxiK/giphy.gif" />
</div>
<div class="row">
    <div class="col-md-1"></div>
    <div class="col-md-6 jumbotron bg">
        <ul>
            {{#each burgers}}
            {{#unless devoured}}
            <li>
                <div class="row">
                    <div class="col-md-6">
                        {{ burger_name }}
                    </div>
                    <div class="col-md-2">
                        <button class="btn devour-btn" data-id={{id}} data-status={{devoured}}>Devour It!</button>
                    </div>
                </div>
            </li>
            {{/unless}}
            {{/each}}
        </ul>
    </div>
    <div class="col-md-4 jumbotron bg">
        <ul>
            {{#each burgers}}
            {{#if devoured}}
            <li>
                {{ burger_name }}
            </li>
            {{/if}}
            {{/each}}
        </ul>
    </div>
    <div class="col-md-1"></div>
</div>
<footer class="footer text-center">
    <div class="container align-middle">
        <p>@Copyright Grishma Patel</p>
    </div>
</footer>